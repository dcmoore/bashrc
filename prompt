# HAPPY_FACE="✓"
HAPPY_FACE="^_^"
function when_ok() {
  ret_val=$?
  if [[ "$ret_val" = "0" ]]; then
      echo -e "$@$HAPPY_FACE"
  fi
  return $ret_val
}

# x, ×, X, ✕, ☓, ✖, ✗, ✘,
# SAD_FACE="✖"
SAD_FACE="O_o"
function when_failed() {
  ret_val=$?
  if [[ "$ret_val" != "0" ]]; then
      echo -e "$@$SAD_FACE"
  fi
  return $ret_val
}

iterm_title() {
  export BASE_NAME=`basename $PWD`
  echo -ne "\033]0;$BASE_NAME\\007";
}

PROMPT_COMMAND='iterm_title'

hg_all() {
  hg status 2> /dev/null \
  | awk '$1 == "M" { print "+" } $1 == "?" { print "?"} $1 == "A" { print "*"} $1 == "R" { print "*"}' \
  | uniq | tr -d '\n'
}
alias vcbranch="vcprompt -f ' %b'"
alias vcinfo="vcprompt -f '%m%u%a'"
PS1="\[$LIGHT_YELLOW\](\h) \$(when_ok '\[$LIGHT_GREEN\]')\$(when_failed '\[$LIGHT_RED\]') \[$WHITE\][\[$CYAN\]\W\[$YELLOW\]\$(vcbranch)\[$LIGHT_RED\]\$(vcinfo)\$(hg_all)\[$WHITE\]] $ \[$RESET\]"
